server:
  port: 8080

eureka:
  client:
    service-url:
      defaultZone: http://${CONFIG_EUREKA:localhost}:8761/eureka
spring:
  application:
    name: api-gateway
  cloud:
    gateway:
      globalcors:
         add-to-simple-url-handler-mapping: true
         corsConfigurations:
          '[/**]':
            allowedOrigins: ['*']
            allowedMethods:
            - POST
            - GET  
            - PUT
            - DELETE
            - OPTION
            allowedHeaders: "*"
             
      routes:

      
        - id: e-commerce-mb-auth
          uri: lb://e-commerce-mb-auth
          predicates:
            - Path=/api/auth/public/**
          filters:
          - StripPrefix=2
          - RewritePath=/api/auth/public/(?<path>.*), /$\{path} 
                
        - id: openapi
          uri: http://localhost:${server.port}
          predicates:
            - Path=/v3/api-docs/**
          filters:
            - RewritePath=/v3/api-docs/(?<path>.*), /$\{path}/v3/api-docs   
           
      
springdoc:
  version: '@springdoc.version@'
  swagger-ui:
    use-root-path: true
    urls:
      - name: Modulo Autenticacion
        url: /api/auth/public/v3/api-docs 